<?xml version="1.0" encoding="utf-8"?>
<TableLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:orientation="vertical"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:id="@+id/main"
   tools:context=".MainActivity">

   <TableRow
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="80dp">

      <Button
         android:id="@+id/heroi"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginStart="60dp"
         android:text="heroi"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintTop_toTopOf="parent" />

      <Button
         android:id="@+id/brivall"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="brivall"
         android:layout_marginStart="60dp"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="@id/heroi"
         app:layout_constraintTop_toTopOf="@id/heroi" />
   </TableRow>

   <TableRow
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp">
      <LinearLayout
         android:orientation="horizontal"
         android:layout_marginStart="10dp" >
      <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="velocitat" />
      <!--Spinner
         android:id="@+id/velocitat_heroi"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginStart="10dp" /-->
         <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/velocitat_heroi"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:inputType="numberDecimal" />
      </LinearLayout>

      <LinearLayout
         android:orientation="horizontal"
         android:layout_marginStart="30dp" >
      <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="velocitat" />
      <!--Spinner
         android:id="@+id/velocitat_brivall"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginStart="10dp" /-->
         <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/velocitat_brivall"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:inputType="numberDecimal" />
      </LinearLayout>
   </TableRow>

   <TableRow
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp">
      <LinearLayout
         android:orientation="horizontal"
         android:layout_marginStart="10dp" >
      <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="registre" />
      <!--Spinner
         android:id="@+id/registre_heroi"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginStart="14dp" /-->
         <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/registre_heroi"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:inputType="numberDecimal" />
      </LinearLayout>
      <LinearLayout
         android:orientation="horizontal"
         android:layout_marginStart="30dp" >
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="registre" />
         <!--Spinner
            android:id="@+id/registre_brivall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp" /-->
         <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/registre_brivall"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:inputType="numberDecimal" />
      </LinearLayout>

   </TableRow>

   <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:id="@+id/notes" />

</TableLayout>
